---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE } from '../config';
import CTAButton from '../components/CTAButton';
import BlogCard from '../components/BlogCard';
---

<BaseLayout title={SITE.title} description={SITE.description}>
	<section class="space-y-16 py-12">
		<div class="text-center space-y-6">
			<h1 class="text-4xl font-bold sm:text-5xl text-foreground">Hello</h1>
			<h2 class="text-2xl font-semibold sm:text-3xl text-foreground/80">I'm Teerapat</h2>
			<p class="text-lg text-muted-foreground max-w-2xl mx-auto">
				Software Engineer passionate about technologies
			</p>
			<div class="flex flex-wrap justify-center gap-4">
				<CTAButton client:load href="/blog" variant="default">Read My Blog</CTAButton>
				<CTAButton client:load href="/about" variant="outline">About Me</CTAButton>
			</div>
		</div>

		<div class="space-y-8">
			<h2 class="text-2xl font-bold text-center text-foreground">Latest Content</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
				<BlogCard
					client:load
					title="Web Development Articles"
					description="Explore articles about Node.js, React, TypeScript and other web technologies."
					date={new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
					href="/blog"
				/>
				<BlogCard
					client:load
					title="Get in Touch"
					description="Contact me with questions or to discuss working together."
					date={new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
					href="/contact"
				/>
			</div>
		</div>
	</section>
</BaseLayout>
